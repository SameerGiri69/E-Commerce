@using Domain.Models
@model IEnumerable<Product>


<a type="btn-success" asp-controller="Product" asp-action="Create" type="button" class="btn btn-sm btn-outline-secondary">Add Product</a>

@foreach (var item in Model)
{
    <div class="col-md-4">
        <div class="card mb-4 box-shadow">
            <img class="card-img-top" src=@item.ProductImageUrl alt="Card image cap">
            <div class="card-body">
                <p class="card-text">@item.Name</p>
                <p class="card-text">@item.Description</p>
                <p class="card-text">@item.Price</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a type="btn-success" asp-controller="Race" asp-action="Detail" asp-route-id=@item.Id type="button" class="btn btn-sm btn-outline-secondary">View</a>
                    </div>
                    <small class="text-muted">@item.ProductCategory</small>
                </div>
            </div>
        </div>
    </div>
}
